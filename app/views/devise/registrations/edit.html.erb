<div class="max-w-md mx-auto mt-6 p-6 bg-white rounded-xl shadow-sm border border-gray-100">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">アカウント編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
    <%= render "shared/error_messages", resource: resource %>

    <div>
      <%= f.label :nickname, "ニックネーム", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <%= f.text_field :nickname, autofocus: true, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600 bg-yellow-50 p-2 rounded">
        現在、確認待ちのメールアドレス: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="pt-2">
      <%= f.label :password, "新しいパスワード", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <p class="text-xs text-gray-400 mb-1">（変更しない場合は空欄のままにしてください）</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="pt-2 border-t border-gray-100">
      <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <p class="text-xs text-gray-400 mb-1">（変更を保存するには入力が必要です）</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "更新する", class: "w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition shadow-sm cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-8 pt-6 border-t border-gray-200">
    <h3 class="text-sm font-bold text-red-600 mb-2">アカウントの削除</h3>
    <p class="text-xs text-gray-500 mb-3">一度削除すると元に戻せません。</p>
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "w-full bg-red-50 text-red-600 border border-red-200 font-bold py-2 rounded-lg hover:bg-red-100 transition text-sm cursor-pointer" %>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "戻る", :back, class: "text-sm text-gray-500 hover:text-gray-700" %>
  </div>
</div>