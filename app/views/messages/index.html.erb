<%# app/views/messages/index.html.erb %>

<div class="bg-gray-100 min-h-screen flex flex-col">

  <%# --- 1. ヘッダー --- %>
  <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white shadow-md sticky top-0 z-50">
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto px-4 py-4">
      <div class="flex items-start justify-between gap-3">
        <%= link_to trip_path(@trip), class: "p-2 hover:bg-white/20 rounded-full transition-colors flex-shrink-0" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
          </svg>
        <% end %>

        <div class="flex-1 pt-1">
          <h1 class="text-lg font-bold leading-tight mb-1"><%= @trip.title %></h1>
          <div class="flex items-center gap-2 text-blue-100 text-xs">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
              <path d="M15.98 1.804a1 1 0 0 0-1.96 0l-.24 1.192a1 1 0 0 1-.784.785l-1.192.238a1 1 0 0 0 0 1.962l1.192.238a1 1 0 0 1 .785.785l.238 1.192a1 1 0 0 0 1.962 0l.238-1.192ZM6.949 5.684a1 1 0 0 0-1.898 0l-.683 2.051a1 1 0 0 1-.95.69h-2.16a1 1 0 0 0-.95 1.31l1.75 2.545a1 1 0 0 1 .35 1.077l-.683 2.051a1 1 0 0 0 1.536 1.116l1.75-1.27a1 1 0 0 1 1.175 0l1.75 1.27a1 1 0 0 0 1.536-1.116l-.683-2.05c-.114-.34.002-.715.35-1.078l1.75-2.545a1 1 0 0 0-.95-1.31h-2.16a1 1 0 0 1-.95-.69l-.683-2.05Z" />
            </svg>
            <span>AIトラベルアシスタント</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# --- 2. チャットエリア --- %>
  <%# ここで幅制限をかけないと、チャットだけ画面いっぱいに広がってしまいます %>
  <%= turbo_frame_tag "messages", class: "flex-1 flex flex-col w-full max-w-md md:max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto" do %>
    <div class="flex-1 px-4 py-4 space-y-6 pb-32 overflow-y-auto w-full" id="messages-container" data-controller="scroll">
      
      <%# 初回メッセージ %>
      <div class="flex justify-start items-start gap-2">
        <%= image_tag "ai_concierge_icon.png", class: "w-8 h-8 rounded-full object-cover flex-shrink-0", alt: "AI Icon" %>
        <div class="bg-white p-3 rounded-2xl rounded-tl-none border border-gray-100 text-sm text-gray-800 max-w-[85%] leading-relaxed">
          こんにちは！旅行の計画でお困りですか？<br>
          「おすすめの観光地は？」「2日目のランチどこがいい？」など、なんでも聞いてください！
        </div>
      </div>

      <%# パーシャル呼び出し %>
      <% @messages.each do |message| %>
        <% if message.user_id.present? %>
          <%= render "messages/user_message", message: message %>
        <% else %>
          <%= render "messages/ai_message", message: message %>
        <% end %>
      <% end %>
      
      <div id="scroll-anchor"></div>
    </div>
  <% end %>

  <%# --- 3. 入力フォーム --- %>
  <%# pointer-events-none: 左右の隙間をクリックした時に、下の画面（スクロールなど）が反応するようにします %>
  <div class="fixed bottom-0 left-0 right-0 z-50 flex justify-center safe-area-pb pointer-events-none">
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl xl:max-w-7xl bg-white border-t border-x border-gray-200 rounded-t-2xl shadow-[0_-4px_10px_rgba(0,0,0,0.05)] px-4 py-4 pointer-events-auto">
      <%# フォーム %>
      <%= render "messages/form", trip: @trip, message: @message %>
      
    </div>
  </div>

</div>