<%# app/views/trips/edit.html.erb %>

<div class="pb-24">
  <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-6 mt-4">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-xl font-bold text-gray-900">旅程の編集</h1>
      <%= link_to "戻る", trip_path(@trip), class: "text-sm text-gray-500 hover:text-blue-600" %>
    </div>

    <%= form_with(model: @trip, local: true, class: "space-y-5") do |f| %>
      <%= render 'shared/error_messages', resource: @trip %>

      <div>
        <%= f.label :title, "旅程のタイトル", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <%= f.text_field :title, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :start_date, "開始日", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <%= f.date_field :start_date, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :total_budget, "総予算 (円)", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <%= f.number_field :total_budget, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :travel_theme, "旅行のテーマ", class: "block text-sm font-bold text-gray-700 mb-1" %>
        <%= f.select :travel_theme, ['温泉重視', '食体験重視', 'アクティビティ重視', 'リラックス', 'その他'], {}, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="pt-4 space-y-3">
        <%= f.submit "更新する", class: "w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition shadow-sm cursor-pointer" %>
        
        <%= link_to "キャンセル", trip_path(@trip), class: "block w-full text-center text-gray-600 py-2 hover:text-gray-800 transition" %>
      </div>
    <% end %>
    
    <div class="mt-10 pt-6 border-t border-gray-100">
      <h3 class="text-xs font-bold text-red-600 mb-2">危険な操作</h3>
      <p class="text-xs text-gray-500 mb-3">この旅程と、関連するすべてのスポット・チャット履歴を削除します。</p>
      <%= button_to "旅程を削除する", trip_path(@trip), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "w-full bg-red-50 text-red-600 font-bold py-2.5 rounded-lg border border-red-100 hover:bg-red-100 transition text-sm cursor-pointer" %>
    </div>
  </div>
</div>