<%# app/views/trips/edit.html.erb %>

<div class="pb-24 px-4 pt-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">旅程の編集</h1>
    <%= link_to "戻る", trip_path(@trip), class: "text-sm text-gray-500 hover:text-blue-600" %>
  </div>

  <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-6">
    <%# パーシャル呼び出し %>
    <%= render 'form', trip: @trip, btn_text: "更新する" %>
    
    <%# 削除ボタンエリア %>
    <% if @trip.owner?(current_user) %>
      <div class="mt-10 pt-6 border-t border-gray-100">
        <h3 class="text-xs font-bold text-red-600 mb-2">削除エリア</h3>
        <p class="text-xs text-gray-500 mb-3">この操作は取り消せません。</p>
        <%= button_to "この旅程を削除する", trip_path(@trip), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "w-full bg-red-50 text-red-600 font-bold py-2.5 rounded-lg border border-red-100 hover:bg-red-100 transition text-sm cursor-pointer" %>
      </div>
    <% end %>
    </div>
  </div>
</div>