<%# app/views/trips/index.html.erb %>

<div class="pb-24 space-y-6">
  
  <div class="px-4 pt-6 pb-2">
    <h1 class="text-2xl font-bold text-gray-800">あなたの旅程</h1>
    <p class="text-sm text-gray-500 mt-1">次の旅行の計画を立てましょう</p>
  </div>

  <div class="px-4 space-y-4">
    <% if @trips.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4"> <%# PCでは2列表示に %>
        <% @trips.each do |trip| %>
          <%= link_to trip_path(trip), class: "block bg-white rounded-xl border border-gray-200 overflow-hidden hover:border-blue-300 transition duration-200" do %>
            <div class="flex h-28">
              <div class="w-28 bg-gray-100 flex-shrink-0 flex items-center justify-center text-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                </svg>
              </div>

              <div class="flex-1 p-3 flex flex-col justify-between min-w-0">
                <div>
                  <div class="flex justify-between items-start gap-2">
                    <h2 class="font-bold text-gray-900 truncate text-base mb-1 flex-1"><%= trip.title %></h2>
                    <span class="inline-block <%= theme_badge_class(trip.travel_theme) %> text-[10px] px-2 py-0.5 rounded-full font-bold whitespace-nowrap flex-shrink-0">
                      <%= trip.travel_theme %>
                    </span>
                  </div>

                  <div class="flex items-center gap-1 text-xs text-gray-500 mb-1">
                    <% if trip.start_date %>
                      <span>
                        <%= trip.start_date.strftime("%Y/%m/%d") %>
                        <% if trip.end_date %>
                          - <%= trip.end_date.strftime("%m/%d") %>
                        <% end %>
                      </span>
                    <% else %>
                      日付未定
                    <% end %>
                  </div>
                </div>

                <div class="flex items-center gap-1 text-xs text-gray-600 font-medium border-t border-gray-100 pt-2 mt-1">
                  <span>予算: ¥<%= number_with_delimiter(trip.total_budget) %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <%# 旅程がない場合 %>
      <div class="flex flex-col items-center justify-center py-16 px-6 bg-white rounded-xl border-2 border-dashed border-gray-200 mt-8">
        <div class="mb-4 inline-flex p-4 bg-blue-50 rounded-full text-blue-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-1">旅程を作成しましょう</h3>
        <p class="text-sm text-gray-500 mb-6 text-center">AIと一緒に、あなただけの<br>旅行プランを作りませんか？</p>
        <%# 修正: shadow-lg を削除し、フラットなデザインに %>
        <%= link_to "新しい旅程を作成", new_trip_path, class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-full font-bold hover:bg-blue-700 transition hover:scale-105" %>
      </div>
    <% end %>
  </div>

  <%# 右下のFAB - 旅程がある場合のみ表示 %>
  <% if @trips.any? %>
    <%# 修正: shadow-lg を削除 %>
    <%= link_to new_trip_path, class: "fixed right-8 bottom-24 group z-30 transition-all duration-200 hover:scale-110" do %>
      <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white w-14 h-14 rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
      </div>
    <% end %>
  <% end %>

</div>