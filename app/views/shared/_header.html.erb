<%# app/views/shared/_header.html.erb %>
<header class="bg-gradient-to-r from-purple-600 to-blue-600 text-white shadow-md sticky top-0 z-50">
  <div class="px-4 py-3 flex justify-between items-center">
    
    <div class="logo-area font-bold text-xl tracking-wider">
      <%= link_to root_path, class: "flex items-center gap-2 hover:opacity-80 transition" do %>
        <span class="text-2xl">✈️</span>
        <span>TravelShiori</span>
      <% end %>
    </div>

    <nav class="text-sm font-medium">
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, data: { "turbo-method": :delete }, class: "text-white hover:bg-white/20 px-3 py-1.5 rounded transition border border-white/30" %>
      <% else %>
        <div class="flex gap-3 items-center">
          <%= link_to "ログイン", new_user_session_path, class: "text-white hover:underline" %>
          <%= link_to "新規登録", new_user_registration_path, class: "text-white border border-white/50 px-3 py-1.5 rounded hover:bg-white/10 transition" %>
        </div>
      <% end %>
    </nav>
  </div>
</header>