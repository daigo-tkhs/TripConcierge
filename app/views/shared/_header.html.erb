<%# app/views/shared/_header.html.erb %>
<header class="bg-blue-600 text-white shadow-md sticky top-0 z-50">
  <div class="px-4 py-3 flex justify-between items-center">
    <%# ロゴエリア %>
    <div class="logo-area font-bold text-xl tracking-wider">
      <%= link_to root_path, class: "flex items-center gap-2 hover:opacity-80 transition" do %>
        <span>✈️</span>
        <span>TravelShiori</span>
      <% end %>
    </div>

    <%# ナビゲーション（シンプルに） %>
    <nav class="text-sm font-medium">
      <% if user_signed_in? %>
        <%# ログイン中は名前を表示せず、ログアウトだけシンプルに（スペース節約） %>
        <%= link_to "ログアウト", destroy_user_session_path, data: { "turbo-method": :delete }, class: "bg-blue-700 px-3 py-1 rounded hover:bg-blue-800 transition" %>
      <% else %>
        <div class="flex gap-2">
          <%= link_to "ログイン", new_user_session_path, class: "hover:text-blue-100" %>
          <%= link_to "登録", new_user_registration_path, class: "bg-white text-blue-600 px-3 py-1 rounded-full hover:bg-gray-100 transition" %>
        </div>
      <% end %>
    </nav>
  </div>
</header>