<%# app/views/shared/_footer.html.erb %>
<%# fixed bottom-0 で画面下部に固定 %>
<footer class="fixed bottom-0 left-0 right-0 z-40 w-full pointer-events-none">
  <%# 内側で幅を制限し、中央寄せ。pointer-events-auto でクリック可能に %>
  <div class="max-w-md md:max-w-4xl mx-auto bg-white border-t border-gray-200 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)] pointer-events-auto">
    <div class="flex justify-around items-center py-2">
      
      <%# アイコン群 (中身は変更なし) %>
      <%= link_to root_path, class: "flex flex-col items-center gap-1 p-2 text-gray-500 hover:text-blue-600 transition group w-1/4 #{current_page?(root_path) ? 'text-blue-600' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="<%= current_page?(root_path) ? 'currentColor' : 'none' %>" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 group-hover:scale-110 transition">
          <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
        </svg>
        <span class="text-[10px] font-medium">ホーム</span>
      <% end %>

      <div class="flex flex-col items-center gap-1 p-2 text-gray-400 w-1/4 cursor-not-allowed">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
        </svg>
        <span class="text-[10px] font-medium">探す</span>
      </div>

      <%# お気に入り (リンク有効化) %>
      <%= link_to favorites_path, class: "flex flex-col items-center gap-1 p-2 text-gray-500 hover:text-blue-600 transition group w-1/4 #{current_page?(favorites_path) ? 'text-blue-600' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="<%= current_page?(favorites_path) ? 'currentColor' : 'none' %>" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 group-hover:scale-110 transition">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
        </svg>
        <span class="text-[10px] font-medium">お気に入り</span>
      <% end %>

      <% if user_signed_in? %>
        <%= link_to edit_user_registration_path, class: "flex flex-col items-center gap-1 p-2 text-gray-500 hover:text-blue-600 transition group w-1/4" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 group-hover:scale-110 transition">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
          </svg>
          <span class="text-[10px] font-medium">マイページ</span>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "flex flex-col items-center gap-1 p-2 text-gray-500 hover:text-blue-600 transition group w-1/4" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 group-hover:scale-110 transition">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15M12 9l-3 3m0 0 3 3m-3-3h12.75" />
          </svg>
          <span class="text-[10px] font-medium">ログイン</span>
        <% end %>
      <% end %>

    </div>
  </div>
</footer>